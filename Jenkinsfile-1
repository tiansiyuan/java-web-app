pipeline {
  agent { 
    /usr/local/bin/docker { image 'maven:3.8.1-adoptopenjdk-11' }
  }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh '/usr/local/bin/docker build -t darinpope/java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy darinpope/java-web-app:latest'
      }
    }
  }
}
